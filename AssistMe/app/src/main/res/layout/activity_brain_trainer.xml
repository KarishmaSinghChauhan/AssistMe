<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:nestedScrollingEnabled="false"
    android:onClick="start"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".BrainTrainerActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#43aa8b"
        android:onClick="start"
        android:padding="40dp"
        android:text="Go!"
        android:textSize="80sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/gameRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#43aa8b"
            android:padding="10dp"
            android:text="30s"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/pointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#43aa8b"
            android:padding="10dp"
            android:text="0/0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:text="31 + 12"
            android:textColor="#ff141414"
            android:textSize="25sp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:layout_below="@+id/sumTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_row="1"

                android:layout_column="0"

                android:layout_gravity="fill"
                android:background="#d9ed92"
                android:onClick="chooseAnswer"
                android:tag="0"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_row="2"

                android:layout_column="0"

                android:layout_gravity="fill"
                android:background="#b5e48c"
                android:onClick="chooseAnswer"
                android:tag="1"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="348dp"
                android:layout_height="80dp"
                android:layout_row="4"

                android:layout_column="0"

                android:layout_gravity="fill"
                android:background="#76c893"
                android:includeFontPadding="false"
                android:onClick="chooseAnswer"
                android:tag="2"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_row="3"

                android:layout_column="0"

                android:layout_gravity="fill"
                android:background="#99d98c"
                android:onClick="chooseAnswer"
                android:tag="3"
                android:text="3"
                android:textSize="40sp" />
        </GridLayout>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="40sp" />

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultTextView"
            android:layout_alignStart="@+id/sumTextView"
            android:layout_alignLeft="@+id/sumTextView"
            android:layout_marginTop="25dp"
            android:background="#43aa8b"
            android:onClick="playAgain"
            android:padding="8dp"
            android:text="Play Again"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>
